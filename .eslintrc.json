{
  "root": true,
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": [
    "plugin:vue/vue3-recommended",
    "eslint:recommended",
    "@vue/typescript/recommended"
  ],
  "parserOptions": {
    "ecmaVersion": 2021
  },
  "plugins": [],
  "rules": {
    "eol-last": "error",
    "no-console": ["error", { "allow": ["warn", "error"]}],
    "vue/multi-word-component-names": [
      "error",
      {
        "ignores": ["List", "Tasks"]
      }
    ]
  }
}
